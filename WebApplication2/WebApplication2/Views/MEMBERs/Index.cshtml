@model IEnumerable<WebApplication2.Models.MEMBER>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap CRUD Data Table for Database with Modal Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</head>
<body>

                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>Manage <b>Members</b></h2>
                        </div>
                        <div class="col-sm-6">
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="bi bi-plus"></i>
                                <span>Add New Employee</span>
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover custom-table">
                    <thead>
                        <tr>
                            <th>Membership No</th>
                            <th>Full Name</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th>Mobile No</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.MEMBERSHIP_NO != null)
                                    {
                                        @item.MEMBERSHIP_NO.ToString()
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FULL_NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GENDER)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ADDRESS)
                                </td>
                                <td>
                                    @if (item.MOBILE_NO != null)
                                    {
                                        @item.MOBILE_NO.ToString()
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.MEMBERSHIP_NO })" class="text-info">
                                        <i class="bi bi-pencil" data-bs-toggle="tooltip" title="Edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.MEMBERSHIP_NO })" class="text-primary">
                                        <i class="bi bi-eye" data-bs-toggle="tooltip" title="View"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.MEMBERSHIP_NO })" class="text-danger">
                                        <i class="bi bi-trash" data-bs-toggle="tooltip" title="Delete"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
          
</body>
</html>
