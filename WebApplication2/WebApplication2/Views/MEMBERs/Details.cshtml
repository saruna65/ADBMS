@model WebApplication2.Models.MEMBER

@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GYM Managemnet System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .h1style {
            text-align: center;
            letter-spacing: 0.2cm;
        }

        .formmargin {
            margin-top: 80px;
        }

        hr.solid {
            border-top: 3px solid #bbb;
        }

        .h5margin {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">GYM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            MEMBERS
                        </a>
                        <ul class="dropdown-menu">
                            <li></li>
                            <li><a class="dropdown-item" href="#">MEMBER CREADENTIALS</a></li>
                            <li></li>
                            <li><hr class="dropdown-divider"></li>
                            <li></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            MEMBERSHIPS
                        </a>
                        <ul class="dropdown-menu">
                            <li></li>
                            <li><a class="dropdown-item" href="#">EXPIRED MEMBERS</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">MEMBERSHIP PLANS</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                    </li>
                    <li class="nav-item">
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container formmargin">

        <div class="card">
            <h1 class="card-header text-center h1style">DETAILS</h1>
            <div class="card-body">
                <div class="row align-items-start">
                    <h5>Personal Details</h5>
                    <hr class="solid">
                    <div class="col">
                        <table class="table table-borderless">
                            <thead>
                            <th>Membership No</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">
                                        @if (Model.MEMBERSHIP_NO != null)
                                        {
                                            @Model.MEMBERSHIP_NO.ToString()
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <thead>
                            <th>Full Name</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">@Html.DisplayFor(model => model.FULL_NAME)</td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <thead>
                            <th>Gender</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">@Html.DisplayFor(model => model.GENDER)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col">
                        <table class="table table-borderless">
                            <thead>
                            <th>Address</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">@Html.DisplayFor(model => model.ADDRESS)</td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <thead>
                            <th>Mobile No</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">
                                        @if (Model.MOBILE_NO != null)
                                        {
                                            @Model.MOBILE_NO.ToString()
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-borderless">
                            <thead>
                            <th>Date Of Birth</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">@Html.DisplayFor(model => model.DOB)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <h5 style="margin-top: 20px;">Emergency Contact Person</h5>
                    <hr class="solid">
                    <div class="col">
                        <table class="table table-borderless">
                            <thead>
                            <th>Full Name</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">@Html.DisplayFor(model => model.EMER_CONT_PERS)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col">
                        <table class="table table-borderless">
                            <thead>
                            <th>Mobile No</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="table-active">
                                        @if (Model.EMER_CONT_PERS_NO != null)
                                        {
                                            @Model.EMER_CONT_PERS_NO.ToString()
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MEMBERSHIP_NO }) |
    @Html.ActionLink("Back to List", "Index")
</p>
